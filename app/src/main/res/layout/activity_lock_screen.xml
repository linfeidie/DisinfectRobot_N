<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.stx.xhb.commontitlebar.CustomTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:titlebar_bg_color="@color/colorMajor"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="华南研究院消毒机器人"
        android:textSize="35sp"
        android:layout_above="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"></TextView>
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_password"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="60dp"></android.support.v7.widget.AppCompatEditText>

    <ezy.ui.view.RoundButton
        android:id="@+id/tv_login"
        android:layout_centerHorizontal="true"
        style="@style/RoundButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et_password"
        android:text="登录"
        app:btnCornerRadius="10dp"
        app:btnPressedRatio="0.5"
        app:btnSolidColor="@color/config_color_50_blue" />
</RelativeLayout>