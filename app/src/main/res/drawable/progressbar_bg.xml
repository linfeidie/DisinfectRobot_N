<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色  -->
    <item android:id="@android:id/background"
    >
        <shape>

            <gradient
                android:endColor="@color/offlineColor"
                android:startColor="@color/offlineColor" />
        </shape>
    </item>

    <!--  设置进度条颜色  -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>

                <gradient
                    android:endColor="@color/colorMajor"
                    android:startColor="@color/colorMajor" />
            </shape>
        </clip>
    </item>
</layer-list>